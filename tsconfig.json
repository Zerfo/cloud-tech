{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "dist",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "module": "system",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
